<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titrePageSeance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Ajouter une sÃ©ance"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Spinner
            android:id="@+id/spinnerFilieres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinnerModules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/spinnerProfessor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


    <EditText
        android:id="@+id/editDateSeance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date (AAAA-MM-JJ)"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/editHeureDebut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:hint="Heure dÃ©but (HH:MM:SS)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"/>

        <EditText
            android:id="@+id/editHeureFin"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Heure fin (HH:MM:SS)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCheckSalles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cuivre"
            android:layout_weight="1"
            android:text="dispo des salles" />

        <Spinner
            android:id="@+id/spinnerSalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnValiderSeance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/brown_dark"
        android:text="CrÃ©er la sÃ©ance"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnListSeances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Liste des sÃ©ances"
        android:backgroundTint="@color/cuivre"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />


</LinearLayout>